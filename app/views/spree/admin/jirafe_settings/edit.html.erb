<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= I18n.t(:jirafe_settings) %>
<% end %>

<%= form_tag admin_jirafe_settings_path, :method => :put do %>
  <div id="preferences" data-hook>
    <fieldset class="general no-border-top">
      <div class="field">
        <%= label_tag(:site_id, I18n.t(:site_id)) + tag(:br) %>
        <%= preference_field_tag(:site_id, Spree::Jirafe::Config.site_id, :type => :integer) %>
      </div>

      <div class="field">
        <%= label_tag(:access_token, I18n.t(:access_token)) + tag(:br) %>
        <%= preference_field_tag(:access_token, Spree::Jirafe::Config.access_token, :type => :string) %>
      </div>

      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button I18n.t('actions.update'), 'icon-refresh' %>
      </div>
    </fieldset>
  </div>
<% end %>
